<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomDialog" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="LCIMTextAppearance"/>

    <style name="LCIMTextAppearance.Large">
        <item name="android:textSize">@dimen/lclk_textsize_large</item>
    </style>

    <style name="LCIMTextAppearance.Normal">
        <item name="android:textSize">@dimen/lclk_textsize_normal</item>
    </style>

    <style name="LCIMTextAppearance.Normal.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LCIMTextAppearance.Small"/>


    <!-- Avatar -->
    <style name="LCLKAvatar">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:scaleType">centerCrop</item>
        <!--<item name="android:src">@drawable/chat_default_user_avatar</item>-->
    </style>

    <style name="LCLKAvatar.Large">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="LCLKAvatar.Small">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
</resources>