<?xml version="1.0" encoding="utf-8"?>
<manifest package="cn.leancloud.livekitapplication"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".LCLKApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/LCLKAppTheme">
        <activity
            android:name=".LCLKLoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".LCLKLiveRoomListActivity"
            android:screenOrientation="portrait"
            android:label="@string/lclk_live_room"/>

        <activity
            android:name=".LCLKLiveRoomCreateActivity"
            android:label="@string/lclk_start_live"
            android:screenOrientation="portrait"
            android:theme="@style/LCLKActivity.NoActionBar"
            android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>